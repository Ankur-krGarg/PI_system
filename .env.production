# ========================
# OPC UA SECURITY CONFIG (PRODUCTION)
# ========================
OPC_UA_ENDPOINT=opc.tcp://production.endpoint:4840
OPC_UA_SECURITY_MODE=SignAndEncrypt
OPC_UA_CA_CERT=/etc/opc/ca.pem
OPC_UA_CLIENT_CERT=/etc/opc/client.pem
OPC_UA_PRIVATE_KEY=/etc/opc/client.key
OPC_UA_USERNAME=prod_service_account
OPC_UA_PASSWORD=CHANGE-ME-USE-VAULT

# ========================
# ENCRYPTION (HSM INTEGRATED)
# ========================
CRYPTO_PROVIDER=azure_keyvault
AZURE_KEYVAULT_URL=https://vault.azure.net
ENCRYPTION_KEY_VERSION=1
ENABLE_FIELD_LEVEL_ENCRYPTION=true

# ========================
# MESSAGE BROKER (KAFKA)
# ========================
KAFKA_BROKERS=kafka.prod.internal:9093
KAFKA_SECURITY_PROTOCOL=SASL_SSL
KAFKA_SASL_MECHANISM=SCRAM-SHA-512
KAFKA_SASL_USERNAME=opc_producer
KAFKA_SASL_PASSWORD=CHANGE-ME-USE-VAULT
KAFKA_SSL_CA_LOCATION=/etc/ssl/certs/kafka-ca.pem

# ========================
# NEO4J CONNECTION
# ========================
NEO4J_URI=bolt://localhost:7687
#neo4j+s://cluster.prod.internal:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=Password123
NEO4J_DATABASE=neo4j
NEO4J_ENCRYPTION=true
NEO4J_MAX_CONN_POOL_SIZE=50

# ========================
# INFLUXDB CONNECTION
# ========================
INFLUXDB_URL=https://influx.prod.internal:8086
INFLUXDB_TOKEN=CHANGE-ME-USE-VAULT
INFLUXDB_ORG=opc_team
INFLUXDB_BUCKET=raw_telemetry

# ========================
# OBSERVABILITY
# ========================
LOG_LEVEL=WARNING
PROMETHEUS_PORT=9091
AUDIT_LOG_PATH=/var/log/opc_audit.log
SIEM_ENDPOINT=siem.prod.internal:6514

# ========================
# RUNTIME CONFIG
# ========================
INSTANCE_TYPE=kubernetes
POD_NAME=${HOSTNAME}
NAMESPACE=opc-prod
CHUNK_SIZE_SECONDS=300
MAX_BATCH_RECORDS=1000